// Inserire le impostazioni in questo file per sovrascrivere quelle utente e predefinite.
{
    "clang.cxxflags": [
        "-std=c++14",
        "-I${workspaceRoot}/include",
        "-I/usr/include"
    ],
    "files.exclude": {
        "tests/*_test": true,
        "*/*.cmake": true,
        "*/CMakeCache.txt": true,
        "*/Makefile": true,
        "*/CMakeFiles": true,
        "**/.git*": true,
        "**/core": true,
        "**/.temp": true,
        "**/*_test": true,
        "**/*_example": true
        //"**/CMakeFiles/**" :  true
    },
    "files.associations": {
        "*.rc": "shellscript",
        "system_error": "cpp",
        "*.ipp": "cpp",
        "future": "cpp",
        "chrono": "cpp"
    },
    "C_Cpp.intelliSenseEngine": "Default"
}